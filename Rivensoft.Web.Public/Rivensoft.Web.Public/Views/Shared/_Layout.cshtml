<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="copyright" content="Copyright 2012 Rivensoft Limited, all rights reserved" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="googlebot" content="noarchive" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/top-menu.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $("#top-menu > ul > li > a").hover(function () {
                $(this).css("background-color", "#C42555");
            }, function () {
                $(this).css("background-color", "#FF3067");
            });

            $("#top-menu > ul > li > a").eq(menuItemIndex).hover(function () {
                $(this).css("background-color", "#C42555");
            }, function () {
                $(this).css("background-color", "#C42555");
            });

            $("#top-menu > ul > li > a").eq(menuItemIndex).css("background-color", "#C42555");
        });
    </script>
</head>
<body>
    <div class="page">
        <div id="header">
            <a href="@Url.Action("Index", "Home")"><img src="@Url.Content("~/Content/Images/rivensoft-logo-medium.png")" alt="Rivensoft Limited - Microsoft .NET software development and consultancy" class="logo" /></a>
        </div>
        <div id="top-menu">
            <ul>
                <li><a href="@Url.Action("Development", "Home")">What We Do</a></li>
                <li><a href="@Url.Action("Clients", "Home")">Portfolio</a></li>
                <li><a href="@Url.Action("Contact", "Home")">Contact Us</a></li>
            </ul>
        </div>
        <div style="clear: both;"></div>
        @RenderBody()
        <div style="clear: both;"></div>
        <div id="final-stripe">
        </div>
        <div style="clear: both;"></div>
        <div id="footer">
        <div id="social">
            <ul>
                <li>Connect with us: </li>
                <li><a href="@Url.Action("Facebook", "Social")" title="Follow us on Facebook"><img src="@Url.Content("~/Content/Images/Social/facebook-32x32.png")" alt="Facebook" /></a></li>
                <li><a href="@Url.Action("Twitter", "Social")" title="Follow us on Twitter"><img src="@Url.Content("~/Content/Images/Social/twitter-32x32.png")" alt="Twitter" /></a></li>
            </ul>
        </div>
        <div style="clear: both;"></div>
        <div id="about">
            <hr />
            <ul>
                <li><a href="@Url.Action("Development", "Home")">What We Do</a></li>
                <li class="separator"></li>
                <li><a href="@Url.Action("Clients", "Home")">Portfolio</a></li>
                <li class="separator"></li>
                <li><a href="@Url.Action("Contact", "Home")">Contact Us</a></li>
                <li class="separator"></li>
                <li><a href="@Url.Action("SiteMap", "Home")">Site Map</a></li>
            </ul>
            <div style="clear: both;"></div>
            <hr />
        </div>
        <div id="company-info">
            <p>Copyright 2012 Rivensoft Limited, all rights reserved.</p>
            <p>Rivensoft Limited is a limited company registered in England and Wales, company number 05926313.</p>
            <p>Rivensoft are based between Leeds and York and provide Microsoft .NET software development
            and consultancy for small business and the enterprise.  Specialising in all areas of C# development
            including MVC, Entity Framework, WCF, Silverlight and SQL Server.</p>
        </div>
    </div>
</body>
</html>
