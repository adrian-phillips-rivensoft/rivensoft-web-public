<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/SiteMain.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <img src="@Url.Content("~/Content/Images/rivensoft-logo-medium.png")" alt="Rivensoft Limited - Microsoft .NET software development and consultancy" class="logo" />
        </div>
        <div id="top-menu">
            <ul>
                <li>Enterprise Development</li>
                <li>Windows Phone Developement</li>
                <li>Contact Us</li>
            </ul>
        </div>
        <div id="main-container">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
        <div style="clear: both;"></div>
        <div id="social">
            <ul>
                <li>Connect with us: </li>
                <li><img src="@Url.Content("~/Content/Images/Social/facebook-32x32.png")" alt="Facebook" /></li>
                <li><img src="@Url.Content("~/Content/Images/Social/twitter-32x32.png")" alt="Twitter" /></li>
                <li><img src="@Url.Content("~/Content/Images/Social/rss-32x32.png")" alt="RSS" /></li>
            </ul>
        </div>
        <div style="clear: both;"></div>
        <div id="about">
            <hr />
            <ul>
                <li><a href="#">Enterprise Development</a></li>
                <li class="separator"></li>
                <li><a href="#">Windows Phone Developement</a></li>
                <li class="separator"></li>
                <li><a href="#">Contact Us</a></li>
            </ul>
            <div style="clear: both;"></div>
            <hr />
        </div>
        <div id="company-info">
            <p>Rivensoft Limited is a limited company registered in England and Wales, company number 05926313.</p>
            <p>Copyright 2012 Rivensoft Limited, all rights reserved.</p>
        </div>
    </div>
</body>
</html>
